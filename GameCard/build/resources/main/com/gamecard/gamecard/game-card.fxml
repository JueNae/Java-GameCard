<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gamecard.gamecard.GameCardController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <children>
        <Text text="Random Card Distribute to each Player: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Text fx:id="winnerText" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2" />
        <GridPane fx:id="gameCardUI" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button onAction="#startGame" text="Start" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
